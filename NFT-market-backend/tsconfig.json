{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "lib": ["ESNext"],
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "rootDir": "./src",
    "outDir": "./dist",
    "moduleResolution": "Node",
    "experimentalDecorators": true,
    "strictNullChecks": true,
    "resolveJsonModule": true,
    "strict": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"],
}